<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-1">
    <h2>会員編集</h2>
  </div>
  <div class="offset-1">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>

<div class="row mt-3">
  <div class="offset-5 col-4">
  <%= form_with model: @user, url: user_registration_path do |f| %>
      <div class="form-group">
        <%= f.label :"ニックネーム" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <%= f.label :"パスワード" %> <i>(変更する場合のみ入力)</i><br />
        <%= f.password_field :password, placeholder: "6文字以上にいて下さい", autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <%= f.label :"パスワード確認" %><br />
        <%= f.password_field :password_confirmation, placeholder: "もう一度入力して下さい", autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <%= f.label :"現在のパスワード" %><br />
        <%= f.password_field :current_password, placeholder: "編集には入力が必要です", autocomplete: "current-password" %>
      </div>
      <div class="form-group">
      <div class="actions">
        <%= f.submit "更新する", class: "btn btn-success" %>
        <%= link_to "戻る", :back, class: "btn btn-outline-dark" %>
      </div>
  </div>
</div>
  <% end %>
    <div class="form-group">
      <h3>退会される方</h3>
      <p>※退会すると全てのデータが無くなります。</p>
      <div class="pl-5">
        <%= button_to "退会する", registration_path(resource_name), data: { confirm: "本当に退会してよろしいですか？" }, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>