<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
    <h2 class="red-border px-3">新規登録</h2>
  </div>
</div>
<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="row mt-3">
  <div class="offset-3 col-5">
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, placeholder: "ニックネーム", class: "form-control offset-4 col-5" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email",  class: "form-control offset-4 col-5" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control offset-4 col-5" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control offset-4 col-5" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "btn btn-success offset-5 col-3" %>
    </div>
  <% end %>
    <div class="row">
      <div>既に登録済みの方</div>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

